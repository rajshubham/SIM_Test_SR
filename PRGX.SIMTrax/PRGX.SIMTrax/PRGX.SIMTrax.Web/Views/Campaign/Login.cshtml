            }
        }

        @@media (max-width: 670px) {
            .padding-bottom-responsive {
                padding-bottom: 20px;
            }
        }

        .client-landing-logo {
            max-width: 390px;
            max-height: 70px;
        }

        @@media(min-width:986px) {
            .client-left-pannel-padding {
                padding-left: 60px;
                padding-right: 0px;
            }

