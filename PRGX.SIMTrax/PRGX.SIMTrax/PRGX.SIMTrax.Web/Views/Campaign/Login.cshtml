        bool IsValidUser = (Session[Constants.SESSION_USER] != null) ? true : false;
        var userType = (Session[Constants.SESSION_USER_TYPE] != null) ? (UserType)Session[Constants.SESSION_USER_TYPE] : UserType.None;
