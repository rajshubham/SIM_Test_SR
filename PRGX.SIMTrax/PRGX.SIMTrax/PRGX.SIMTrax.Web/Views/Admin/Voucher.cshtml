    function VoucherValidation() {
        var result = true;
        $.validator.unobtrusive.parse($('#voucher-create-edit-form'))
        if (!$('#voucher-create-edit-form').valid()) {
            result = false;
        }
        if ($('input[name=MapBuyer]:Checked').val() == "True") {
