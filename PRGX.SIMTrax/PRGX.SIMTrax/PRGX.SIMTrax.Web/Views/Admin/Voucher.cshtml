                $('#voucher-buyer-error').show();
                result = false;
            }
            else {
                $('#voucher-buyer-error').hide();
            }
        }
        return result;
    }

    function SaveVoucher() {
        if (!VoucherValidation()) {
            return false;
        }
        var startdate = new Date($('#PromotionStartDate').val());
        var endDate = new Date($('#PromotionEndDate').val());
        if (startdate > endDate) {
