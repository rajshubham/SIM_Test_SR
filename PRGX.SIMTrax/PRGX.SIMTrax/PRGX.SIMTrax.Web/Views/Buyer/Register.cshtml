    <div class="modal fade bs-example-modal-sm" data-backdrop="static" id="buyer-registration-alert" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content col-md-9 center-modal-help">
                <div class="modal-header">
                    <div class="bootstrap-dialog-header">
                        <div class="bootstrap-dialog-title">
                            <h4>@PRGX.SIMTrax.Domain.Util.ReadResource.GetResourceForGlobalization(PRGX.SIMTrax.Domain.Util.Constants.SUBMISSION_SUCCESSFUL, userCulture).ToString()</h4>
                        </div>
                    </div>
                </div>
                <div class="modal-body row">
                    <div class="col-md-12">
                        @PRGX.SIMTrax.Domain.Util.ReadResource.GetResourceForGlobalization(PRGX.SIMTrax.Domain.Util.Constants.YOUR_DETAILS_HAVE_BEEN_SUBMITTED_FOR_VERIFICATION, userCulture).ToString()
                    </div>
                </div>
                <div class="modal-footer no-border-top">
                    <button type="button" class="btn btn-color" id="buyer-registration-alert-ok">
                        @PRGX.SIMTrax.Domain.Util.ReadResource.GetResourceForGlobalization(PRGX.SIMTrax.Domain.Util.Constants.OK, userCulture).ToString()
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var TurnOverListCount = parseInt('@Model.BuyerTurnOverList.Count');
    var defaultErrorMessage = '@PRGX.SIMTrax.Domain.Util.ReadResource.GetResourceForGlobalization(PRGX.SIMTrax.Domain.Util.Constants.DEFAULT_ERROR_MESSAGE, userCulture).ToString()';
    var industrySectorError = '@PRGX.SIMTrax.Domain.Util.ReadResource.GetResourceForGlobalization(PRGX.SIMTrax.Domain.Util.Constants.INDUSTRY_SECTOR_ERROR, userCulture).ToString()';

    function ShowDescriptionToolTip(e, description) {
        $(e).tipso('update', 'content', description);
        $(e).tipso('update', 'background', 'rgb(248, 248, 248)');
        $(e).tipso('update', 'color', 'rgb(0, 0, 0)');
        $(e).tipso('show');
    }

    function HideToolTip(e) {
    }

    function ShowHideBNSDescription(command) {
        if (command == "show") {
            $("#divsectorDescriptionBNS").show();
        }
        else {
            $("#divsectorDescriptionBNS").hide();
        }
    }

    $(".tooltip-remove").hover(function () {
        var desc = $(this).attr("data-description");
        $(this).tipso('update', 'content', desc);
        $(this).tipso('update', 'background', '#FF9933');
        $(this).tipso('show');
    }, function () {
        $(this).tipso('hide');
        $(this).tipso('remove');
        $(this).tipso('destroy');
    }
  );
</script>
@Scripts.Render("~/bundles/BuyerRegister")
